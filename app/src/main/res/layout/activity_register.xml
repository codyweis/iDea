<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#248baa">

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/txtRegFrst"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:hint="First Name" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/txtRegLst"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:hint="Last Name" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/txtRegUsrnm"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:hint="Username" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:id="@+id/txtRegPswrd"
        android:hint="Password" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/txtRegPswrdCnfrm"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:hint="Confirm Password"
        android:editable="false"
        android:enabled="false"
        android:visibility="invisible" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/txtRegEmail"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:hint="University Email" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register"
        android:id="@+id/btnRegstr"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:minWidth="200dp"
        android:maxWidth="200dp"
        android:textColor="#248baa" />
</LinearLayout>